<% include partials/header %>

  <div class="container account-container">
    <h1 class="text-center">Log In</h1>
    <hr>
    <form class="account-form" action="/login" method="POST">
      <div class="form-group">
        <input type="text" class="form-control" name="username" placeholder="Username" required="true">
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="Password" required="true">
      </div>
      <button style="display: block;" type="submit" class="btn btn-primary mx-auto">Log In</button>
    </form>
  </div>

  <% include partials/footer %>