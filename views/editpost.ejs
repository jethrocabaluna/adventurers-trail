<% include partials/header %>

  <div class="container margin-container">
    <h1 class="text-center">Edit Post</h1>
    <hr>
    <form class="post-form" action="/posts/<%= post._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input type="text" class="form-control" name="post[title]" placeholder="Title" required="true" value="<%= post.title %>" maxlength="40">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="post[image]" placeholder="Image url" required="true" value="<%= post.image %>">
      </div>
      <div class="form-group">
        <textarea id="edit-post-textarea" class="form-control" name="post[description]" cols="30" rows="10" placeholder="description" required="true"><%= post.description %></textarea>
      </div>
      <button style="display: block;" type="submit" class="btn btn-primary mx-auto">Post</button>
    </form>
  </div>

  <% include partials/footer %>